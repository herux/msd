<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/widget0"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<RelativeLayout
	    android:id="@+id/widget30"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_x="3dp"
	    android:layout_y="-3dp" >

	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="71dp"
	        android:text="SALES ORDER SYSTEM"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/textView1"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="32dp"
	        android:text="MENSA BINSASUKSES"
	        android:textAppearance="?android:attr/textAppearanceSmall" />

	    <EditText
	        android:id="@+id/etPassword"
	        android:layout_width="350px"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/textView1"
	        android:layout_alignParentBottom="true"
	        android:layout_alignRight="@+id/textView1"
	        android:layout_marginBottom="104dp"
	        android:gravity="center"
	        android:password="true"
	        android:textSize="18sp" />

	    <TextView
	        android:id="@+id/lblPassword"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/etPassword"
	        android:layout_alignLeft="@+id/etPassword"
	        android:gravity="left"
	        android:text="Password"
	        android:textColor="#FFFFFF"
	        android:textSize="18sp" />

	    <EditText
	        android:id="@+id/etUsername"
	        android:layout_width="350px"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/lblPassword"
	        android:layout_alignLeft="@+id/lblPassword"
	        android:layout_alignRight="@+id/etPassword"
	        android:gravity="center"
	        android:password="false"
	        android:textSize="18sp" >

	        <requestFocus />
	    </EditText>

	    <TextView
	        android:id="@+id/lblUsername"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/etUsername"
	        android:layout_alignLeft="@+id/etUsername"
	        android:gravity="left"
	        android:text="Username"
	        android:textColor="#FFFFFF"
	        android:textSize="18sp" />

	    <Button
	        android:id="@+id/btnLogin"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@+id/etPassword"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="46dp"
	        android:background="@drawable/login" />

	</RelativeLayout>

</LinearLayout>
